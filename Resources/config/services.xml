<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="ydle.settings.roomtype.controller.class">Ydle\SettingsBundle\Controller\SettingsRoomTypeController</parameter>
        <parameter key="ydle.settings.nodeype.controller.class">Ydle\SettingsBundle\Controller\SettingsNodeTypeController</parameter>
    </parameters>

    <services>
        <service id="ydle.settings.roomtype.controller" class="%ydle.settings.roomtype.controller.class%">
            <argument type="service" id="ydle.roomtype.manager" />
        </service>
        <service id="ydle.settings.nodetype.controller" class="%ydle.settings.nodetype.controller.class%">
            <argument type="service" id="ydle.nodetype.manager" />
        </service>
    </services>

</container>
